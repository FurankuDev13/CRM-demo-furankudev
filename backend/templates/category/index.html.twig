{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ page_title }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="section level-left">
            <div class="level-item">
                <h2 class="level-item subtitle has-text-info is-3">Les cat√©gories du catalogue</h2>
            </div>
            <button class="level-item button is-info is-small is-size-4">{{ categories|length }}</button>
        </div>
        <table class="table is-fullwidth is-hoverable is-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Image</th>
                    {% if is_granted('ROLE_SUPPORT') %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>   
                            <a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a>
                        </td>
                        <td>{{ category.description|truncate(30) }}</td>
                        <td>
                            <figure class="image is-48x48">
                                <img src="{{ category.picture ?: "https://stickeramoi.com/3777-large_default/autocollant-point-interrogation-muraux.jpg" }}">
                            </figure>
                        </td>
                        {% if is_granted('ROLE_SUPPORT') %}
                            <td>
                                <form class="" action='{{ path('category_archive', {'id': category.id}) }}' method="POST">
                                    <input class="" type="hidden" name="_method" value="PATCH">
                                    <button type="submit" class="button is-primary"><i class="fas fa-archive"></i>&nbsp;Archiver</button>
                                </form>
                            </td>
                        {% endif %}

                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}