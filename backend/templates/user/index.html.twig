{% extends 'base_with_sidebar.html.twig' %}

{% block title %}{{ parent() }} - {{ page_title }}{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' %}
{% endblock %}

{% block content %}
    {% if filterName %}
        {% set orderButtonsIncludePath = 'user/_order_buttons_withfilter.twig' %}
    {% else %}
        {% set orderButtonsIncludePath = 'user/_order_buttons.html.twig' %}
    {% endif %}
    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <h2 class=" level-item subtitle has-text-info is-3">Les utilisateurs (collaborateurs)</h2>
                {% if filter %}
                    <button class=" level-item button is-primary is-small is-size-4">{{ filterName }}</button>
                {% endif %}
                <button class=" level-item button is-info is-small is-size-4">{{ users|length }}</button>
            </div>  
        </div> 
            <div class="level-right">
                <a class="level-item" href="{{ path('contact_index')}}">
                    <button class="level-item button is-primary s-small is-size-3"><i class="fas fa-sort-alpha-down"></i></button>
                </a>
                {% if is_granted('ROLE_MANAGER') %}
                    <a class="level-item" href="{{ path('user_new')}}">
                        <button type="submit" class="level-item button is-success s-small is-size-3"><i class="fas fa-plus-circle"></i></button>
                    </a>
                {% endif %}
            </div>
    </div>
    <table class="table is-fullwidth is-hoverable is-striped">
        <thead>
            <tr>
                <th>Nom 
                        {% include orderButtonsIncludePath with {'table': 'p', 'field' : 'lastname'} %}
                    </th>
                <th>Prénom 
                        {% include orderButtonsIncludePath with {'table': 'p', 'field' : 'firstname'} %}
                    </th>
                <th>Email 
                        {% include orderButtonsIncludePath with {'table': 'u', 'field' : 'email'} %}
                    </th>
                <th>Téléphone 
                        {% include orderButtonsIncludePath with {'table': 'p', 'field' : 'businessPhone'} %}
                    </th>
                <th>Role(s) 
                        {% include orderButtonsIncludePath with {'table': 'r', 'field' : 'title'} %}
                    </th>
                <th>Société(s)</th>
                {% if is_granted('ROLE_MANAGER') %}
                <th>Actions</th>
                {% endif %}

            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>   
                        <a href="{{ path('user_show', {'id': user.id}) }}">{{ user.person.lastname }}</a>
                    </td>
                    <td>{{ user.person.firstname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.person.businessPhone }}</td>
                    <td>
                        {% for role in user.userRoles %}
                            {{ role.title }} {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% for company in user.companies %}
                            {{ company.name }} {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    {% if is_granted('ROLE_MANAGER') %}
                    <td class="level">
                        <div class="level-left">
                            <a class="level-item" href="{{ path('user_edit', {'id' : user.id })}}">
                                <button type="submit" class="button is-info"><i class="fas fa-edit"></i></button>
                            </a>
                            <form class="level-item" action='{{ path('user_archive', {'id': user.id}) }}' method="POST">
                                <input class="" type="hidden" name="_method" value="PATCH">
                                {# Modal de confirmation d'opération #}
                                {% include 'partial/_confirm_cancel_modal.html.twig' with {'message': 'Confirmation d\'Archivage'} %}
                                <button class="button showModalConfirm is-warning"><i class="fas fa-archive"></i></button>
                            </form>
                        </div>
                    </td>
                    {% endif %}

                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}