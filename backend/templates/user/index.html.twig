{% extends 'base_with_sidebar.html.twig' %}

{% block title %}{{ parent() }} - {{ page_title }}{% endblock %}

{% block sidebar %}
    <div class="level-left">
        <div class="level-item">
            <h2 class="level-item subtitle has-text-info is-3">Roles</h2>
        </div>
        <button class="level-item button is-info is-small is-size-4">{{ userRoles|length }}</button>
    </div>
    <div class="list is-primary is-hoverable">
        {% for userRoles in userRoles %}
            <a class="list-item has-text-primary" href="#">
            {{ userRoles.title }}
            </a>
        {% endfor %}
    </div>
{% endblock %}

{% block content %}
        <div class="level-left">
            <div class="level-item">
                <h2 class="level-item subtitle has-text-info is-3">Les utilisateurs (collaborateurs)</h2>
            </div>
            <button class="level-item button is-info is-small is-size-4">{{ users|length }}</button>
        </div>
        <table class="table is-fullwidth is-hoverable is-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Role(s)</th>
                    <th>Société(s)</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>   
                            <a href="{{ path('user_show', {'id': user.id}) }}">{{ user.person.lastname }}</a>
                        </td>
                        <td>{{ user.person.firstname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.person.businessPhone }}</td>
                        <td>
                            {% for role in user.userRoles %}
                                {{ role.title }} {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% for company in user.companies %}
                                {{ company.name }} {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}